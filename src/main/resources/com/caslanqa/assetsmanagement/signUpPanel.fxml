<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.caslanqa.assetsmanagement.RegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Sign Up">
        <font>
            <Font name="System Bold" size="36.0" />
        </font></Label>
    <TextField fx:id="usernameSignUp" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Username">
        <font>
            <Font name="Arial" size="16.0" />
        </font></TextField>
    <PasswordField fx:id="passwordSignUp" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Password">
        <font>
            <Font name="Arial" size="16.0" />
        </font></PasswordField>
   <TextField fx:id="currencyApiKey" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Currency API Key" />
    <Label fx:id="messageLabel" textFill="#a4a4a4" />
    <Button fx:id="signUpBtn" onMouseClicked="#signUpBtn" prefHeight="64.0" prefWidth="139.0" style="-fx-background-color: green;" text="SIGN UP" textFill="WHITE">
        <font>
            <Font name="Arial Bold" size="24.0" />
        </font></Button>
</VBox>
